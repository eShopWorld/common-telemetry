<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>

    <Version>3.0.0-beta4</Version>
    <PackageReleaseNotes>
      - Added Metrics
      - Added support for event filters
      - Async'ed the non-anonymous .Publish
      - Added an AggregateException unwrapper
      - Improved the overall integration with Kusto
    </PackageReleaseNotes>

    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>True</IsPackable>

    <PackageId>Eshopworld.Telemetry</PackageId>
    <Title>Eshopworld.Telemetry</Title>
    <Authors>David Rodrigues, Oisin Haken, David Guerin, Artur Zgodzinski</Authors>
    <Copyright>Copyright eShopWorld 2018</Copyright>
    <Description>eShopWorld common telemetry application insights</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/eShopWorld/telemetry</PackageProjectUrl>
    <PackageTags>Application Insights, Telemetry, Log</PackageTags>
    <RepositoryUrl>https://github.com/eShopWorld/telemetry</RepositoryUrl>
    <IncludeSource>True</IncludeSource>

    <DebugType>Full</DebugType>
    <LangVersion>latest</LangVersion>
    <SonarQubeTestProject>False</SonarQubeTestProject>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.4.0" />
    <PackageReference Include="Eshopworld.Core" Version="3.0.0-beta*" />
    <PackageReference Include="Microsoft.ApplicationInsights" Version="2.9.1" />
    <PackageReference Include="Microsoft.Azure.Kusto.Ingest.NETStandard" Version="6.1.8" />
    <PackageReference Include="Microsoft.Azure.Services.AppAuthentication" Version="1.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="System.Reactive" Version="4.1.5" />
  </ItemGroup>

</Project>
